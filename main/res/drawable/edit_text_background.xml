<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo do campo -->
    <solid android:color="#ffbd59" />

    <!-- Cor e espessura da borda -->
    <stroke
        android:width="1dp"
        android:color="#F4E0BF" />

    <!-- Cantos arredondados -->
    <corners android:radius="8dp" />

    <!-- Espaçamento interno (opcional, mas bom para o texto não colar nas bordas) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>