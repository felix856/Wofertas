<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wofertas_background"
    tools:context=".DashboardSupermercadoActivity">

    <!-- Toolbar no topo da tela -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_dashboard"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light">

        <!-- Logo do supermercado -->
        <ImageView
            android:id="@+id/toolbar_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:contentDescription="Logo Supermercado"
            android:src="@drawable/perfil"
            android:scaleType="centerCrop" />

        <!-- Título da tela -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Publicar Oferta"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- FrameLayout para o conteúdo principal -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_dashboard"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_supermercado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Título da Oferta -->
                <EditText
                    android:id="@+id/etTituloOferta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Título da Oferta (Ex: Pão Francês)"
                    android:inputType="textCapSentences"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:autofillHints="name" />

                <!-- Descrição Detalhada -->
                <EditText
                    android:id="@+id/etDescricaoOferta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Descrição Detalhada"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:gravity="top"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etTituloOferta"
                    android:autofillHints="long_form_text" />

                <!-- Botão Selecionar PDF -->
                <Button
                    android:id="@+id/btnSelectPdf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Selecionar PDF da Oferta"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/wofertas_blue_primary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etDescricaoOferta" />

                <!-- Nome do PDF -->
                <TextView
                    android:id="@+id/tvPdfName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nenhum PDF selecionado"
                    android:textColor="@color/darker_gray"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnSelectPdf" />

                <!-- Data -->
                <EditText
                    android:id="@+id/etScheduledDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Data de Agendamento (Opcional)"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPdfName"
                    android:autofillHints="date" />

                <!-- Hora -->
                <EditText
                    android:id="@+id/etScheduledTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Hora de Agendamento (Opcional)"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etScheduledDate"
                    android:autofillHints="time" />

                <!-- Botão Publicar -->
                <Button
                    android:id="@+id/btnPublishOffer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Publicar Oferta"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/wofertas_blue_primary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etScheduledTime" />

                <!-- ProgressBar -->
                <ProgressBar
                    android:id="@+id/progressBarUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnPublishOffer"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_supermercado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu_supermercado"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>
